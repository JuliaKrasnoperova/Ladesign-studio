                    .slider__item
                        img(src="./img/slider/loft-1.png" alt="loft")
                    .slider__item
                        img(src="./img/slider/loft-2.png" alt="loft")
                    .slider__item
                        img(src="./img/slider/loft-3.png" alt="loft")
            div#prev.control.slider__prev
                img(src="./img/slider/arrow-left.svg" alt="left")
            div#next.control.slider__next
                img(src="./img/slider/arrow-right.svg" alt="right")

